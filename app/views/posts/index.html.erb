<h1>Posts</h1>
<table class="zebra-striped">
 <thead>
  <tr>
    <th>ID</th>
        <th>
      <%= t("activerecord.attributes.post.title", :default => t("activerecord.labels.title", :default => "Title")) %>
    </th>
        <th>Created at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| -%>
   <tr>
    <td><%= post.id %></td>
        <td><%= link_to post.title, post_path(post) %>
    </td>
        <td><%= post.created_at %></td>
    <td>
      <%= link_to "Show", post_path(post) %>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Destroy", post_path(post), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
    </td>
    </tr>
    <% end -%>
   </tbody>
</table>

<%= link_to "New", new_post_path, :class => 'btn primary' %>

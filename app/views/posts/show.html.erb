
<label class="label"><%= t("activerecord.attributes.post.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</label>
<p><%= @post.title %></p>

<label class="label"><%= t("activerecord.attributes.post.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</label>
<p><%= @post.description %></p>
<div class="actions">
<%= link_to "Back", posts_path, :class => 'btn primary'  %>
<%= link_to "Edit", edit_post_path(@post), :class => 'btn primary' %>
<%= link_to "Delete", post_path(@post), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn primary' %>
</div>
